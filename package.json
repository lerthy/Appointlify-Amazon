{
  "name": "appointlify-amazon",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": ["frontend", "backend", "backend/netlify/functions"],
  "scripts": {
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:backend": "npm --prefix backend run dev",
    "server": "npm --prefix backend run start",
    "build": "npm --prefix backend/netlify/functions install && npm --prefix frontend run build",
    "preview": "npm --prefix frontend run preview",
    "lint": "npm --prefix frontend run lint",
    "mcp:supabase": "npx -y @supabase/mcp-server-supabase@latest"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19"
  },
  "dependencies": {
    "groq-sdk": "^0.37.0"
  }
}
