{
  "name": "appointlify-amazon",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "frontend",
    "backend",
    "backend/netlify/functions"
  ],
  "scripts": {
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:backend": "npm --prefix backend run dev",
    "server": "npm --prefix backend run start",
    "build": "npm --prefix backend/netlify/functions ci || npm --prefix backend/netlify/functions install && npm --prefix frontend run build",
    "preview": "npm --prefix frontend run preview",
    "lint": "npm --prefix frontend run lint",
    "mcp:supabase": "npx -y @supabase/mcp-server-supabase@latest"
  }
}
